{{yield}}

{{#yield-slot 'icon'}}
  <div class='icon'>
    {{yield}}
  </div>
{{/yield-slot}}

<div class='title'>
  {{#yield-slot 'title'}}
      <div class='primary-title'>
        {{yield}}
      </div>
  {{/yield-slot}}

  {{#yield-slot 'summary'}}
      <div class='sub-title'>
        {{yield}}
      </div>
  {{/yield-slot}}
</div>

{{#yield-slot 'controls'}}
    <div class='controls'>
      {{yield}}
    </div>
{{/yield-slot}}

{{#yield-slot 'actions'}}
    <div class='actions'>
      {{yield (block-params
        (hash
          button=(component 'frost-button'
            priority='tertiary'
            size='small'
            vertical=true
          )
        )
      )}}
    </div>
{{/yield-slot}}